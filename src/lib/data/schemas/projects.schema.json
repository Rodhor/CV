{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Projects Schema",
    "type": "object",
    "properties": {
        "projects": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/projectEntry"
            }
        }
    },
    "required": [
        "projects"
    ],
    "additionalProperties": false,
    "$defs": {
        "localizedString": {
            "type": "object",
            "properties": {
                "en": {
                    "type": "string"
                },
                "de": {
                    "type": "string"
                }
            },
            "required": [
                "en",
                "de"
            ],
            "additionalProperties": false
        },
        "link": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "label",
                "url"
            ],
            "additionalProperties": false
        },
        "projectEntry": {
            "type": "object",
            "properties": {
                "title": {
                    "$ref": "#/$defs/localizedString"
                },
                "descriptionShort": {
                    "$ref": "#/$defs/localizedString"
                },
                "descriptionLong": {
                    "$ref": "#/$defs/localizedString"
                },
                "technologies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "links": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/link"
                    }
                },
                "icon": {
                    "type": "string"
                }
            },
            "required": [
                "title",
                "descriptionShort",
                "technologies"
            ],
            "additionalProperties": false
        }
    }
}